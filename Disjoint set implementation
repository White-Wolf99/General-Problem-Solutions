//Disjoint Set implementation

vector<int> parent;
vector<int> rank;

int find(int x){            //Find function
  if(x == parent[x]){
    return x;
  }
  return parent[x] = find(parent[x]);
}

void Union(int x, int y){
  int par_x = find(x);
  int par_y = find(y);

  if(par_x == par_y) 
    return ;

  if(rank[par_x] > rank[par_y]){
    parent[par_y] = par_x;
  }else if(rank[par_x] < rank[par_y]){
    parent[par_x] = par_y;
  }else{
    parent[par_y] = par_x;
    rank[par_x]++;
  }

}

